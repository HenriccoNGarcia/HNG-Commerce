{
    "name": "hng/hng-commerce",
    "description": "Sistema completo de e-commerce para WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "HNG Desenvolvimentos",
            "email": "contato@hngdesenvolvimentos.com.br"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "fakerphp/faker": "^1.20",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "HNG\\Commerce\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HNG\\Commerce\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
